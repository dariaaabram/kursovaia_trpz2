@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление блюда</title>
</head>
<body>
    <div>
        <h3>Параметры нового блюда</h3>
        <h6>(Если вы не хотите, чтобы парамеры менялись, оставьте дефолтные значения в полях)</h6>
        <form method="post" action="">
            <input type="hidden" value="@ViewBag.Id" name="Id" />
            <table>
                <tr>
                    <td><p>Введите название</p></td>
                    <td><input type="text" value=" " name="Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введите цену</p></td>
                    <td><input type="number" min="0" step="0.1" value="0" name="Price" /> </td>
                </tr>
                <tr>
                    <td><p>Введите вес</p></td>
                    <td><input type="number" min="0" step="0.1" value="0" name="Weight" /> </td>
                </tr>
                <tr>
                    <td><p>Введите время приготовления</p></td>
                    <td><input type="number" min="0" step="0.1" value="0" name="Time" /> </td>
                </tr>

                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
