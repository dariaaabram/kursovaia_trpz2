@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div>
        <h3>Ингридиенты</h3>
        <br />
        <h3>@ViewBag.Word</h3>
        <table>
            <tr>
                <td><p>Название</p></td>
                <td></td>
            </tr>

            @foreach (var b in ViewBag.Ingredients)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                </tr>
            }
        </table>
       
    </div>
</body>